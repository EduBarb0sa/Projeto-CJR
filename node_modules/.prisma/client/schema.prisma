// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model user{
  id        Int     @id @default(autoincrement())
  email     String  @unique
  senha     String
  nome      String
  genero    String
  cargo     String
  userposts Posts[]
}

model Posts{
  id        Int     @id @default(autoincrement())
  title     String
  content   String
  user      user @relation(fields: [userId], references: [id])
  userId    Int
}